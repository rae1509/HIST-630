xquery version "3.1";

for $book in books/book 

    let $author := $book/author
    let $title := $book/title
    let $press := $book/publisher/press
    let $date := $book/date
    
    order by $date ascending

return 
    <bibl>
        { fn:concat($author, ". ",  $title, ". ", $press, ". ", $date, ". " ) }
    </bibl>